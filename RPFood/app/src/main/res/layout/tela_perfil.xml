<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background">


    <Button
        android:id="@+id/btnVoltar"
        android:layout_width="44dp"
        android:layout_height="36dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/back"
        tools:text="@string/btnVoltar" />

    <ImageButton
        android:id="@+id/img"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/edtName"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="11dp"
        android:onClick="onImageGalleryClicked"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/com_facebook_profile_picture_blank_portrait"
        tools:ignore="ContentDescription" />

    <EditText
        android:id="@+id/edtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:drawableLeft="@drawable/ic_user_24dp"
        android:ems="10"
        android:hint="@string/edtName"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="282dp" />

    <EditText
        android:id="@+id/edtMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtName"
        android:layout_alignStart="@+id/edtName"
        android:layout_below="@+id/edtName"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/ic_user_24dp"
        android:ems="10"
        android:hint="@string/edtMatricula"
        android:inputType="number"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="334dp" />

    <EditText
        android:id="@+id/edtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtMatricula"
        android:layout_alignStart="@+id/edtMatricula"
        android:layout_below="@+id/edtMatricula"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/edtEmail"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="389dp" />

    <EditText
        android:id="@+id/edtSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/edtEmail"
        android:layout_alignStart="@+id/edtEmail"
        android:layout_below="@+id/edtEmail"
        android:layout_marginTop="14dp"
        android:ems="10"
        android:hint="@string/edtPass"
        android:inputType="textPassword"
        android:textAlignment="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="84dp"
        tools:layout_editor_absoluteY="442dp" />

    <Button
        android:id="@+id/btnSalvar"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="@string/btnSalvar"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="503dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="19dp" />


</RelativeLayout>

